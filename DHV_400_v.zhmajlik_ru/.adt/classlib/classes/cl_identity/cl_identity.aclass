        ls_msg-msgv2 = lr_bup_msg->msgv2.
        ls_msg-msgv3 = lr_bup_msg->msgv3.
        ls_msg-msgv4 = lr_bup_msg->msgv4.

        if lr_bup_msg->lifetime eq 0.
