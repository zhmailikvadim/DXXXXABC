  " Check Roles
  loop at ct_dbms_roles reference into data(lr_dbms_role).

    " Check existence
    if lr_dbms_role->change_mode <> if_identity=>co_delete. "deletion is always possible

      lr_dbms_us_prov->check_role_exist(
