  CALL FUNCTION 'MEPOBADI_CLOSE'
    EXPORTING
      im_header     = me
    EXCEPTIONS
      error_message = 0.

* clean up text memory                           "594632
  l_text_name(10) = po_number.
  CALL FUNCTION 'DELETE_TEXT_FROM_CATALOG'
    EXPORTING
      object    = 'EKKO      '
      name      = l_text_name
      id        = '*'
      language  = '*'
    EXCEPTIONS
      not_found = 0
      OTHERS    = 0.

  l_text_name+10 = '*'.
